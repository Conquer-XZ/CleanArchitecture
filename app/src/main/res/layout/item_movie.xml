<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/movie_poster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/black_transparent_10"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_transparent_80"
            android:textSize="@dimen/font_size_3x_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_transparent_40"
            android:textSize="@dimen/font_size_1x_medium" />

        <TextView
            android:id="@+id/movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/type"
            android:textColor="@color/black_transparent_60"
            android:textSize="@dimen/font_size_1x_medium" />

        <TextView
            android:id="@+id/movie_imdb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imdb_id"
            android:textColor="@color/black_transparent_60"
            android:textSize="@dimen/font_size_1x_medium" />


    </LinearLayout>
</LinearLayout>